resource "aws_iam_role" "control_plane" {
  name                = "eks-control-plane"
  assume_role_policy  = data.aws_iam_policy_document.trust_relationship.json
  managed_policy_arns = ["arn:aws:iam::aws:policy/AmazonEKSClusterPolicy"]
}

data "aws_iam_policy_document" "trust_relationship" {
  statement {
    effect  = "Allow"
    actions = ["sts:AssumeRole"]
    principals {
      type        = "Service"
      identifiers = ["eks.amazonaws.com"]
    }
  }
}

resource "aws_iam_role" "pod_execution" {
  name                = "eks-pod-execution"
  assume_role_policy  = data.aws_iam_policy_document.pod_execution.json
  managed_policy_arns = ["arn:aws:iam::aws:policy/AmazonEKSFargatePodExecutionRolePolicy"]
}

data "aws_iam_policy_document" "pod_execution" {
  statement {
    effect  = "Allow"
    actions = ["sts:AssumeRole"]
    principals {
      type        = "Service"
      identifiers = ["eks-fargate-pods.amazonaws.com"]
    }
  }
}

resource "aws_iam_policy" "pod_identity" {
  name = "eks-pod-identity-policy"
  policy = jsonencode({
    "Version" : "2012-10-17",
    "Statement" : [
      {
        "Effect" : "Allow",
        "Action" : [
          "eks-auth:AssumeRoleForPodIdentity"
        ],
        "Resource" : "*"
      }
    ]
  })
}

resource "aws_iam_role_policy_attachment" "pod_identity" {
  policy_arn = aws_iam_policy.pod_identity.arn
  role       = aws_iam_role.pod_execution.name
}

resource "aws_iam_role" "george_fg" {
  name = "eks-george-fg"
  assume_role_policy = jsonencode({
    "Version" : "2012-10-17",
    "Statement" : [
      {
        "Sid" : "AllowEksAuthToAssumeRoleForPodIdentity",
        "Effect" : "Allow",
        "Principal" : {
          "Service" : "pods.eks.amazonaws.com"
        },
        "Action" : [
          "sts:AssumeRole",
          "sts:TagSession"
        ]
      }
    ]
  })
}

// Allow access to all actions on a specific S3 bucket
resource "aws_iam_policy" "george_fg" {
  name = "eks-george-fg-policy"
  policy = jsonencode({
    "Version" : "2012-10-17",
    "Statement" : [
      {
        "Effect" : "Allow",
        "Action" : "s3:*",
        "Resource" : "arn:aws:s3:::george-fg/*"
      }
    ]
  })
}

resource "aws_iam_role_policy_attachment" "george_fg" {
  policy_arn = aws_iam_policy.george_fg.arn
  role       = aws_iam_role.george_fg.name
}

